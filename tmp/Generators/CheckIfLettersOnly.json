    "source-code": [
        "    public static boolean checkIfLettersOnly(String stringToTest) {",
        "        char ch;",
        "        int i = 0;",
        "        while (i < stringToTest.length()) {",
        "            ch = stringToTest.charAt(i);",
        "            if (!(ch >= 'a' && ch <= 'z') && !(ch >= 'A' && ch <= 'Z'))",
        "                return false;",
        "            i++;",
        "        }",
        "        return true;",
        "    }"
    ]
}